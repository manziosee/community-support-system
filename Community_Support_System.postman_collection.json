            "url": "{{baseUrl}}/api/users/role/CITIZEN"
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\",\n  \"phoneNumber\": \"0781234567\",\n  \"province\": \"Kigali\",\n  \"district\": \"Gasabo\"\n}"
            },
            "url": "{{baseUrl}}/api/users/1"
          }
        }
      ]
    },
