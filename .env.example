# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/community_support_system_db
DB_USERNAME=postgres
DB_PASSWORD=your_password_here

# Production Database (Neon)
PROD_DB_URL=jdbc:postgresql://your-neon-host/your-database?sslmode=require
PROD_DB_USERNAME=your_neon_username
PROD_DB_PASSWORD=your_neon_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-256-bits-long
JWT_EXPIRATION=86400000

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Server Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev

# Render Deployment
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=DEBUG